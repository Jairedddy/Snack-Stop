<section class="login flex justify-center pt-24" style="padding : 100px; font-size : 35px">
  <div class="w-full max-w-xs">
      <form action="/login" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" style="width : 150%; float: none;">
          <% if(messages.error) { %>
          <span class="text-red-500 text-sm"><%= messages.error %></span>
          <% } %>
          <div class="mb-4">
              <label for="username">
                  Email
              </label>
              <input name="email"
                  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                  id="username" type="email" placeholder="Enter your email">
          </div>
          <div class="mb-6">
              <label  for="password">
                  Password
              </label>
              <input name="password"
                  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                  id="password" type="password" placeholder="******************">
          </div>
          <div class="flex items-center justify-between">
              <button
                  class="btn"
                  type="submit">
                  Log In
              </button>
              <a class="inline-block align-baseline font-bold text-sm" href="/register" style="font-size: 14px; color: blue;">
                  Don't have account?
              </a>
          </div>
      </form>
  </div>
</section>