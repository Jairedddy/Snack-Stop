<section class="cart py-16">
    <% if(session.cart) { %>
    <div class="order container mx-auto" style="height : auto; padding : 150px; width : 100%">
        <div class="flex items-center border-b border-gray-300" style="height: auto;">
            <img src="IMAGES/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <hr><hr>
        <div class="order-list">
            <% for(let item of Object.values(session.cart.menuitems)) { %>
            <div class="flex items-center my-8" style="size : 100%">
                <img src="IMAGES/<%= item.menuitem.image %>" alt="" style="width : 25%">
                <div class="ml-4 flex-1">
                    <h1><%= item.menuitem.name %></h1>
                </div>
                <span class="flex-1"><%= item.qty %></span>
                <span class="font-bold">$<%= item.menuitem.price * item.qty %>.00</span>
            </div>
            <% } %>
        </div>
        <hr><hr>
        <div class="text-right py-4">
            <div style="width : 100%; text-align: right">
                <span class="text-lg font-bold">Total Amout : </span>
                <span class="amount text-2xl font-bold ml-2">$<%= session.cart.totalPrice %>.00</span>
            </div>
            <div>
                <form action="">
                    <input type="text" class="border border-gray-400 p-2 w-1/2 my-2" placeholder="Phone Number">
                    <input type="text" class="border border-gray-400 p-2 w-1/2" placeholder="Address"> <br>
                    <button class="btn px-6 rounded-full" type="submit">Order Now</button>
                </form>
            </div>
            <a href="" class="inline-block cursor-pointer btn px-6 py2 rounded-full font-bold mt-6 ">Login to continue</a>
        </div>
    </div>
    <% } else{ %>
            <div class="empty-cart" style="height : 50px ; padding : 150px;">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Is Empty</h1>
            <p>You probably haven't ordered anything yet.
                To order an item from the menu, go to the home pag.
            </p>
            <a href="/" class="inline-block px-6 py-2 rounded-full btn text-black font-bold mt-12">Go Bck to Home</a>
        </div>
    </div>
    <% } %>
</section>
